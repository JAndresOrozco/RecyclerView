<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B86C5C"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_example"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/gitt" />

        <TextView
            android:id="@+id/tv_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_example"
            android:layout_toEndOf="@id/iv_example"
            android:text="GitHub"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/desc_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_example"
            android:layout_toEndOf="@id/iv_example"
            android:text="Descripcion"
            android:layout_below="@id/tv_example"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>